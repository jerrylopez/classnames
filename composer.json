{
    "name": "jerrylopez/classnames",
    "description": "A utility to construct HTML class name strings in PHP",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jerrylopez\\Classnames\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "authors": [
        {
            "name": "Jerry Lopez",
            "email": "jerry@92labs.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.34"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:pest": "pest --colors=always",
        "test": [
            "@test:pest"
        ]
    }
}
